        finally
        {
            _isBackupInProgress = false;
        }
    }

    private async Task RestoreDatabase(InputFileChangeEventArgs args)
    {
        if (_isRestoreInProgress)
        {
            Snackbar.Add("A database restore is already running", Severity.Info);
            return;
        }

        if (args.FileCount == 0 || args.File is null)
        {
            Snackbar.Add("No backup file selected", Severity.Warning);
            return;
        }

        _isRestoreInProgress = true;

        try
        {
            await using var stream = args.File.OpenReadStream(MaxBackupUploadBytes);
            await BackupService.RestoreBackupAsync(stream);
            Snackbar.Add("Database restored successfully. Restart the application to reload data.", Severity.Success);
        }
        catch (IOException ioEx)
        {
            Snackbar.Add($"File error during restore: {ioEx.Message}", Severity.Error);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to restore database: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isRestoreInProgress = false;
            _restoreInputKey = Guid.NewGuid();
        }
    }

